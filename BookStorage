public class BookStorage {
    public static void main(String[] args) {
        ManagerOfBook randomBooks = new ManagerOfBook();
        randomBooks.addBook(new Book("Овощи", "А.Павлов"));
        randomBooks.addBook(new Book("Криминалистика", "И.Огибалов"));
        randomBooks.addBook(new Book("Ремонт своими руками"));
        randomBooks.addBook(new Book("Фрукты", "А.Павлов"));
        randomBooks.addBook(new Book("Коллекции мировых музеев", "Ю.Семенова"));
        randomBooks.addBook(new Book("Картины И.Глазунова"));
        randomBooks.addBook(new Book("Основные принципы психологии", "Е.Железнова"));
        randomBooks.addBook(new Book("Основы педагогики", "Е.Железнова"));
        Menu.userGreeting();
        Menu.userStartWorking(randomBooks);
        Menu.userNeedToShowBook(randomBooks);
        Menu.userNeedToShowLibrary(randomBooks);
        Menu.userNeedToRemoveBook(randomBooks);
        Menu.userNeedToShowLibrary(randomBooks);
        Menu.finishingProgram();
    }
}
